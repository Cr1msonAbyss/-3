<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sorting App" Height="300" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <TextBox x:Name="InputTextBox" Width="250" Margin="0,0,0,10" />
            <ComboBox x:Name="SortMethodComboBox" Margin="0,0,0,10">
                <ComboBoxItem Content="Сортировка пузырьком" Tag="BubbleSort"/>
                <ComboBoxItem Content="Быстрая сортировка" Tag="QuickSort"/>
            </ComboBox>
            <Button Content="Сортировать" Click="SortButton_Click" Width="100"/>
            <TextBlock x:Name="ResultTextBlock" Margin="0,10,0,0" TextWrapping="Wrap"/>
        </StackPanel>
    </Grid>
</Window>